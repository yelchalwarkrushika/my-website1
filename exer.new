    .exercise-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 20px;
        margin-right: 80px;
    }

    .exercise-card {
        width: 300px;
        margin: 15px;
        padding: 15px;
        background-color: cadetblue;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

    .exercise-card:hover {
        transform: scale(1.05);
    }

    img {
        width: 100%;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    .pulse-animation {
        animation: pulse 1.5s infinite;
    }

    #exerciseContainer {
        background-color:rgb(71, 17, 218);
        color:  white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(21, 46, 187, 0.1);
        width: 400px;
        height: 70px;
        text-align: center;
    }

    #timer {
        font-size: 24px;
        margin-bottom: 20px;
    }

    #exerciseName {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .yoga{
        display: inline-block;
        margin-right: 50px;
    }

